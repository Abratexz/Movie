<%- include('../partials/header', { title: "Register" }) %>

<section class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card bg-dark text-white shadow-lg p-4 w-100" style="max-width: 500px;">
    <h2 class="text-center mb-3">üìù Create an Account</h2>
    <p class="text-muted text-center mb-4">Join MovieVerse and start booking your favorites!</p>


    <!-- Client-side (AJAX) message area -->
    <div id="reg-alert" class="alert d-none" role="alert"></div>

    <form id="register-form" action="/auth/register" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Full Name</label>
        <input type="text" id="name" name="name" class="form-control bg-secondary text-white" required />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" id="email" name="email" class="form-control bg-secondary text-white" required />
      </div>

      <div class="mb-3">
        <label for="phone" class="form-label">Phone (optional)</label>
        <input type="tel" id="phone" name="phone" class="form-control bg-secondary text-white" />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" name="password" class="form-control bg-secondary text-white" required />
      </div>

      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control bg-secondary text-white" required />
      </div>
        
    <% if (error && error.length) { %>
        <div class="alert alert-danger text-center"><%= error[0] %></div>
      <% } %>
      <% if (success && success.length) { %>
        <div class="alert alert-success text-center"><%= success[0] %></div>
      <% } %>
      
      <div class="d-grid">
        <button id="register-btn" type="submit" class="btn btn-danger">Register</button>
      </div>

      <div class="mt-3 text-center">
        <small>Already have an account? <a href="/auth/login" class="text-decoration-none text-warning">Login here</a></small>
      </div>
    </form>
  </div>
</section>



<%- include('../partials/footer') %>
