<%- include('../partials/header', { title: "Reset Password" }) %>

<section class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card bg-dark text-white p-4 shadow-lg" style="max-width: 480px; width: 100%;">
    <h3 class="mb-3 text-center">🔐 Reset Password</h3>


    <form method="POST" action="/auth/reset/<%= token %>">
      <div class="mb-3">
        <label for="password" class="form-label">New Password</label>
        <input id="password" name="password" type="password" class="form-control bg-secondary text-white" required />
      </div>
      <% if (error && error.length > 0) { %>
        <div class="alert alert-danger text-center"><%= error[0] %></div>
      <% } %>
      <% if (success && success.length > 0) { %>
        <div class="alert alert-success text-center"><%= success[0] %></div>
      <% } %>
      <div class="d-grid">
        <button class="btn btn-success">Reset Password</button>
      </div>
    </form>
  </div>
</section>

<%- include('../partials/footer') %>
