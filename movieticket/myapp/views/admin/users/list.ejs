<%- include('../../partials/header', { title: "Manage Users" }) %>

<div class="container my-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
  <h2>Manage Users</h2>
  <a href="/admin/users/new" class="btn btn-success mb-3">
    <i class="bi bi-plus-lg me-1"></i> Add New User
  </a>
 </div>

  <% if (success && success.length > 0) { %>
    <div class="alert alert-success"><%= success[0] %></div>
  <% } %>
  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger"><%= error[0] %></div>
  <% } %>

  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% (rows || []).forEach(u => { %>
        <tr>
          <td><%= u.id %></td>
          <td><%= u.name %></td>
          <td><%= u.email %></td>
          <td><%= u.phone || '-' %></td>
          <td><%= u.role %></td>
          <td>
            <a href="/admin/users/<%= u.id %>/edit" class="btn btn-sm btn-outline-light">Edit</a>
            <form method="POST" action="/admin/users/<%= u.id %>/delete" class="d-inline">
              <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this user?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../../partials/footer') %>
