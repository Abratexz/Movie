<%- include('../../partials/header', { title, user }) %>

<% function fmtLocal(dt){
    const d = (dt instanceof Date) ? dt : new Date(dt);
    const p = n => n<10 ? '0'+n : n;
    return d.getFullYear()+'-'+p(d.getMonth()+1)+'-'+p(d.getDate())+' '
         + p(d.getHours())+':'+p(d.getMinutes());
} %>

<div class="container py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">Manage Showtimes</h1>
    <a href="/admin/showtimes/new" class="btn btn-primary">
      <i class="bi bi-plus-lg me-1"></i> New Showtime
    </a>
  </div>

  <form class="row g-2 mb-3" method="get" action="/admin/showtimes">
    <div class="col-sm-8 col-md-6">
      <input type="text" class="form-control" name="q"
             placeholder="Search movie, screen, format or language…" value="<%= (typeof q !== 'undefined' ? q : '') %>">
    </div>
    <div class="col-auto">
      <button class="btn btn-outline-secondary">Search</button>
    </div>
  </form>

  <div class="table-responsive">
    <table class="table table-dark table-striped align-middle">
      <thead>
        <tr>
          <th class="text-nowrap">ID</th>
          <th class="text-nowrap">Movie</th>
          <th class="text-nowrap">Screen</th>
          <th class="text-nowrap">Start Time</th>
          <th class="text-nowrap">Price</th>
          <th class="text-nowrap">Currency</th>
          <th class="text-nowrap">Format</th>
          <th class="text-nowrap">Language</th>
          <th class="text-nowrap">Status</th>
          <th class="text-end" style="width:220px; white-space:nowrap;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (Array.isArray(showtimes) && showtimes.length) { %>
          <% showtimes.forEach(st => { %>
            <tr>
              <td class="text-nowrap"><code>#<%= st.id %></code></td>
              <td class="fw-semibold"><%= st.movie || '—' %></td>
              <td class="text-nowrap"><%= st.screen_name || ('#' + st.screen_id) %></td>
              <td class="text-nowrap"><%= fmtLocal(st.start_utc) %></td>
              <td class="text-nowrap"><%= st.base_price %></td>
              <td class="text-nowrap"><%= st.currency || 'THB' %></td>
              <td class="text-nowrap"><%= st.format || '—' %></td>
              <td class="text-nowrap"><%= st.language || '—' %></td>
              <td class="text-nowrap">
                <span class="badge <%= st.status === 'scheduled' ? 'bg-success' : 'bg-danger' %>">
                  <%= st.status || 'scheduled' %>
                </span>
              </td>
              <td class="text-end" style="white-space:nowrap;">
                <div class="d-inline-flex align-items-center justify-content-end gap-2 flex-nowrap">
                  <a href="/admin/showtimes/<%= st.id %>/seats" class="btn btn-sm btn-outline-info">Seats</a>
                  <a href="/admin/showtimes/<%= st.id %>/edit"  class="btn btn-sm btn-outline-light">Edit</a>
                  <form method="POST" action="/admin/showtimes/<%= st.id %>/delete" class="m-0 p-0 d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="10" class="text-center py-5">No showtimes yet.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../../partials/footer') %>
